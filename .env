# Configuración para DESARROLLO
# Este archivo debe copiarse al servidor como .env

# Flask
FLASK_APP=wsgi.py
FLASK_CONFIG=development
FLASK_DEBUG=true
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Configuración de seguridad (¡CAMBIAR EN PRODUCCIÓN!)
SECRET_KEY=tu_clave_secreta_muy_segura_aqui_cambiar_en_produccion

# Configuración de la aplicación
APP_NAME=Floristería Raquel

# Configuración de archivos (actualizada para nueva estructura)
UPLOAD_FOLDER=app/static/uploads
DOCUMENTS_FOLDER=app/static/documents
MAX_FILE_SIZE=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,doc,docx

# Base de datos (simplificada para resolver problema de path)
DATABASE_URL=sqlite:///floristeria.db

# Configuración de usuarios por defecto
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASS=admin123
DEFAULT_USER_USER=usuario
DEFAULT_USER_PASS=usuario123

# Configuración para sincronización de datos
SYNC_ENABLED=true
BACKUP_FOLDER=backups
