# Configuración para PRODUCCIÓN
# Este archivo debe copiarse al servidor como .env

# Configuración de seguridad (¡CAMBIAR ESTAS CLAVES!)
SECRET_KEY=CAMBIAR_POR_CLAVE_SEGURA_UNICA_PARA_PRODUCCION_123456789

# Configuración de la aplicación
APP_NAME=Floristería Raquel
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Configuración de archivos
UPLOAD_FOLDER=static/uploads
DOCUMENTS_FOLDER=static/documents
MAX_FILE_SIZE=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,doc,docx

# Base de datos MySQL para PRODUCCIÓN
# Formato: mysql+pymysql://usuario:contraseña@servidor:puerto/base_de_datos
DATABASE_URL=mysql+pymysql://floristeria_user:CAMBIAR_CONTRASEÑA_BD_PRODUCCION@localhost:3306/floristeria_production

# Base de datos alternativas para diferentes entornos
DEV_DATABASE_URL=mysql+pymysql://floristeria_user:CAMBIAR_CONTRASEÑA_BD_DEV@localhost:3306/floristeria_dev
TEST_DATABASE_URL=mysql+pymysql://floristeria_user:CAMBIAR_CONTRASEÑA_BD_TEST@localhost:3306/floristeria_test

# Configuración de usuarios por defecto
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASS=CAMBIAR_CONTRASEÑA_ADMIN_PRODUCCION
DEFAULT_USER_USER=usuario
DEFAULT_USER_PASS=CAMBIAR_CONTRASEÑA_USUARIO_PRODUCCION

# Configuración para sincronización de datos
SYNC_ENABLED=true
BACKUP_FOLDER=backups

# Configuración específica de MySQL para PRODUCCIÓN
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci

# Pool de conexiones MySQL (optimizado para producción)
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_POOL_TIMEOUT=20
SQLALCHEMY_POOL_RECYCLE=3600
SQLALCHEMY_MAX_OVERFLOW=20

# Configuración de logging para producción
LOG_LEVEL=INFO
LOG_FILE=logs/floristeria_production.log

# Configuración de SSL para MySQL (opcional, recomendado para producción)
# MYSQL_SSL_CA=/path/to/ca-cert.pem
# MYSQL_SSL_CERT=/path/to/client-cert.pem
# MYSQL_SSL_KEY=/path/to/client-key.pem
